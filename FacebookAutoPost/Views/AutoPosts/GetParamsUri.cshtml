@model FacebookAutoPost.Models.GetParamsUri


@{
    ViewData["Title"] = "Get Params Uri";
}

<h2> Please enter sources for the paramters in your Uri </h2>
<h4> template for multiple values per source </h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="GetParamsUri">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="PageId" type="hidden" value=@Model.PageId class="form-control" />
                <span asp-validation-for="ParamOne" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParamType1" class="control-label"></label>
                <select asp-for="ParamType1" id="ParamType1" class="form-control">
                    <option value="City">City</option> 
                    <option value="Country">Country</option> 
                    <option value="Date">Date (YYYY-MM-DD)</option> 
                    <option value="Number">Nuber</option>
                    <option value="Array">Array</option>
                    <option value="String">String</option> 
                </select>
            </div>
             <div class="form-group">
                <label asp-for="ParamOne" class="control-label"></label>
                <input asp-for="ParamOne" class="form-control" />
                <span asp-validation-for="ParamOne" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RandomValue1" class="control-label"></label>
                <input asp-for="RandomValue1" type="checkbox" />
            </div>

            @if( Model.NumParams > 1)
            {
             <div class="form-group">
                <label asp-for="ParamType2" class="control-label"></label>
                <select asp-for="ParamType2" id="ParamType2" class="form-control">
                    <option value="City">City</option> 
                    <option value="Country">Country</option> 
                    <option value="Date">Date (YYYY-MM-DD)</option> 
                    <option value="Number">Nuber</option>
                    <option value="Array">Array</option>
                    <option value="String">String</option> 
                </select>
            </div>
             <div class="form-group">
                <label asp-for="ParamTwo" class="control-label">Param Two</label>
                <input asp-for="ParamTwo" class="form-control" />
                <span asp-validation-for="ParamTwo" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RandomValue1" class="control-label"></label>
                <input asp-for="RandomValue1" type="checkbox" />
            </div>               
            }
            @if (Model.NumParams > 2)
            {
             <div class="form-group">
                <label asp-for="ParamType3" class="control-label"></label>
                <select asp-for="ParamType3" id="ParamType3" class="form-control">
                    <option value="City">City</option> 
                    <option value="Country">Country</option> 
                    <option value="Date">Date (YYYY-MM-DD)</option> 
                    <option value="Number">Nuber</option>
                    <option value="Array">Array</option>
                    <option value="String">String</option> 
                </select>
            </div>
             <div class="form-group">
                    <label asp-for="ParamThree" class="control-label">Param Three</label>
                <input asp-for="ParamThree" class="form-control" />
                <span asp-validation-for="ParamThree" class="text-danger"></span>
            </div>
             <div class="form-group">
                <label asp-for="RandomValue1" class="control-label"></label>
                <input asp-for="RandomValue1" type="checkbox" />
            </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>