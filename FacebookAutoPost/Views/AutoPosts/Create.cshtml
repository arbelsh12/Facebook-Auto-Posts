@model FacebookAutoPost.Models.AutoPost

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PageId" class="control-label"></label>
                <textarea asp-for="PageId" class="form-control"></textarea>
                <span asp-validation-for="PageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Token" class="control-label"></label>
                <textarea asp-for="Token" class="form-control"></textarea>
                <span asp-validation-for="Token" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserAPI" class="control-label"></label>
                <textarea asp-for="UserAPI" class="form-control"></textarea>
                <span asp-validation-for="UserAPI" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostTemplate" class="control-label"></label>
                <textarea asp-for="PostTemplate" class="form-control" rows="10"></textarea>
                <span asp-validation-for="PostTemplate" class="text-danger"></span>
                <p style="color:#DC0000;">For a newline add " \n". <br></p>
            </div>
            <div class="form-group">
                <label asp-for="Frequency" class="control-label"></label>                 
                <select asp-for="Frequency" id="Frequency">
                    <option value="" selected disabled>--Please choose an option--</option>
                    <option value="2Min">Every 2 minutes</option>
                    <option value="5Min">Every 5 minutes</option>
                    <option value="30Min">Every 30 minutes</option>
                    <option value="1Hour">Every 1 hour</option>
                    <option value="5Hour">Every 5 hours</option>
                    <option value="day">Once a day</option>
                    <option value="week">Once a week</option>
                    <option value="month">Once a month</option>
                </select>
                <p></p>
                <span asp-validation-for="Frequency" class="text-danger"></span>
                <div id="freqency-selector-group-container" class="form-group">
                    <div id ="time-freqency-selector-group-container">
                    </div>
                     <div id ="day-week-freqency-selector-group-container">
                    </div>
                      <div id ="day-month-freqency-selector-group-container">
                    </div>
                </div>
                
            </div>
            <div class="form-group">
                <label asp-for="ApiKey" class="control-label"></label>
                <textarea asp-for="ApiKey" class="form-control"></textarea>
                <span asp-validation-for="ApiKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uri" class="control-label"></label>
                <textarea asp-for="Uri" class="form-control"></textarea>
                <span asp-validation-for="Uri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script src="~/js/freqencySelector.js"></script>
