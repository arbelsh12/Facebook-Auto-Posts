@model IEnumerable<FacebookAutoPost.Models.AutoPost>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p class="text-right">
    <a asp-action="Create" class="btn btn-primary">Create New</a> <!--why no asp controller?-->
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PageId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserAPI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostTemplate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Frequency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApiKey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uri)
            </th>
            <th>Change</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAPI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTemplate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Frequency)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApiKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uri)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PageId" class="btn btn-info">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PageId" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PageId" class="btn btn-danger">Delete</a> <!--why asp-route-id="item.PageId" and not asp-route-id="AutoPost.PageId ??"-->
            </td>
        </tr>
}
    </tbody>
</table>
